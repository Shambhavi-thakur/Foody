<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="croma.com.foody.Fragments.MenusItemFragment">


    <LinearLayout
        android:id="@+id/menuLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F1F1F1"
        android:orientation="horizontal"
        android:padding="20dp">


        <ImageView
            android:id="@+id/restroImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/app_icon" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp">


            <TextView
                android:id="@+id/restroNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yo Yo China Town"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/restroAddressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Burgers, Chinese, South Indian, Wraps" />

        </LinearLayout>
    </LinearLayout>


    <ListView
        android:id="@+id/expressListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menuLinearLayout"></ListView>


</RelativeLayout>
