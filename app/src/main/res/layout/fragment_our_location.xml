<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.OurLocationFragment">


    <ImageView
        android:id="@+id/location_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/ourlocationimage_icon"/>

    <TextView
        android:id="@+id/setlocation_Txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Set Location"
        android:textSize="30dp"
        android:textColor="#2a190f"
        android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City"
            android:textSize="20dp"
            android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location"
        android:textSize="20dp"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/showResturants_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#804b2e"
        android:text="Show Restaurants"
        android:layout_marginTop="30dp"
        android:textColor="#FBF5C0"/>

</LinearLayout>
