<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="croma.com.foody.Fragments.RestroListFragment">


    <TextView
        android:id="@+id/numberOfRestro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="14sp" />


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/numberOfRestro"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#C3C3C3"></View>


    <ListView
        android:id="@+id/restroListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view"></ListView>

</RelativeLayout>
