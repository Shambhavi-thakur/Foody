<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="croma.com.foody.Activities.AccountDetailsActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/accountdetails_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Account details"
                android:textSize="25dp"
                android:layout_marginLeft="9dp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/edit_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_gravity="clip_horizontal"
                android:textSize="22dp"
                android:textColor="#004c00"
                android:layout_marginLeft="80dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


            <EditText
                android:id="@+id/firstname_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First name"
                android:textSize="20dp"
                android:layout_marginTop="70dp"/>

            <EditText
                android:id="@+id/lastname_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last name"
                android:textSize="20dp"
                android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/emailid_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textSize="20dp"
                android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/mobile_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/changepassword_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#004c00"
                android:paddingTop="35dp"
                android:text="Change password"
                android:onClick="showDialog"
                android:layout_gravity="center"
                android:textSize="22sp"/>

        </LinearLayout>

</RelativeLayout>

